<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jjj"
    android:onClick="effectSide"
    tools:context=".BoardActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="164dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="154dp"
        android:text="your name"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/name1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:text="youremail@gmail.com "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/vprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail"
        android:layout_marginTop="21dp"
        android:background="@color/white"
        android:onClick="viewProfile"
        android:padding="8dp"
        android:paddingStart="25dp"
        android:text="View Account"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vprofile"
        android:layout_marginTop="21dp"
        android:background="@color/white"
        android:onClick="call"
        android:padding="8dp"
        android:paddingStart="25dp"
        android:text="call doctor"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sideffct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call"
        android:layout_marginTop="21dp"
        android:background="@color/white"
        android:padding="8dp"
        android:paddingStart="25dp"
        android:text="add side effect"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>